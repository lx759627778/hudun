page{
  background: #F2F6F9;
}
.product-intro{
  padding-bottom: 30rpx;
}
.product-intro view{
  text-align: center;
  padding-top: 52rpx;
}
.product-intro view image{
  width: 218rpx;
  height: 158rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.product-intro view text{
  display: block;
}
.product-intro view .title{
  color: #46A3F4;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}
.product-intro view .dec{
  padding: 0 76rpx 0 26rpx;
  font-size: 24rpx;
  text-align: left;
  line-height: 38rpx;
  color: #9D9D9D;
}

.package-plan{
  padding:30rpx 150rpx 27rpx  72rpx;
  background: #fff;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 18rpx;
}
.package-plan .plan-detail{
  display: flex;
  align-items: center;
  font-size: 36rpx;
  margin-bottom: 24rpx;
}
.package-plan .logo-icon{
  width: 64rpx;
  height: 64rpx;
}
.package-plan .plan-detail .equal{
  margin: 0 24rpx;
}
.package-plan .plan-detail .price{
  color: #46A3F4;
  
}
.package-plan .plan-dec{
  font-size: 24rpx;
  line-height: 32rpx;
}
.package-plan .plan-dec text{
  color: #46A3F4;
}
.hot-rec{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.service{
  color: #9D9D9D;
  font-size: 24rpx;
  padding: 0 26rpx;
}
.service text{
  display: block;
  margin-bottom: 14rpx;
}
.service .website{
  margin-bottom: 14rpx;
}
.service text.url{
  display: inline;
}
.service text.title{
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.service .teach .teach-title{
  font-size: 24rpx;
}
.service .teach text{
  font-size: 20rpx;
}
.pay{
  padding:10rpx 0;
  margin-bottom: 30rpx; 
}
.pay button{
  background: #5799F5;
  color: #fff;
}
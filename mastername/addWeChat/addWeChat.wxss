/* addWeChat/addWeChat.wxss */

/* 弹窗 */
.pop-mask{
  position: fixed;
  z-index: 1000;
  top:0;
  left: 0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.7);
  overflow: auto;
}
.pop-ctt{
  width:589rpx;
  margin:-40rpx auto 0;
  position: relative;
  padding-bottom:80rpx;
}
.pop-bg{
  display: block;
  width:100%;
}
.Guide-WeChat{
  position: absolute;
  top:0;
  left: 0;
  width:100%;
  padding-top:150rpx;
}
.WeChat-name{
  width:430rpx;
    margin:0 auto;
    overflow: hidden;
}
.WeChat-name image{
  width:120rpx;
  float: left;
}
.WeChat-name text{
  line-height: 120rpx;
  margin-left: 146rpx;
  display: block;
}
.WeChat-text-img{
  display: block;
  margin:16rpx auto 0;
  width:428rpx;
}
.Guide-WeChat-line{
  padding:20rpx 30rpx;
}
.Guide-WeChat-line.bg-f7f5e8{
  background-color: #f7f5e8;
  padding:30rpx 30rpx 20rpx;
}
.copy-text{
  position: relative;
  border:2rpx solid #a26a35;
  overflow: hidden;
  border-radius: 6rpx;
}
.copy-text1{
  width:64%;
  line-height: 60rpx;
  float:left;
  color:#333333;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  position: relative;
  z-index: 2;
  text-align: center;
}
.copy-text button{
  width:36%;
  line-height: 60rpx;
  background: #a26a35;
  color:#fff;
  float:left;
  font-size: 28rpx;
  padding:0;
  margin:0;
  border-radius: 0;
  border:none;
  outline: none;

}
.copy-text-nub{
  position: absolute;
  top:0;
  right:0;
  width:36%;
  height:100%;
  opacity: 0;
  font-size: 28rpx;
}
.Quota-text{
  font-size: 22rpx;
  text-align: center;
  color:#333;
  margin-top:10rpx;
  line-height: 1.5;
}
.Quota-text text{
  color:#A36B35;
  font-size: 24rpx;
}
.Quota-text text.big-text{
  font-size: 30rpx;
}
.add-text{
  font-size: 25rpx;
  line-height: 1.5;
  color:#333;
  text-align: center;
}
.add-text text{
   color:#A36B35;
}
.add-img{
  display: block;
  width:416rpx;
  margin:10rpx auto 0;
}
.pop-close{
  position: absolute;
  bottom:16rpx;
  width:48rpx;
  height:48rpx;
  left: 50%;
  margin-left: -24rpx;
}
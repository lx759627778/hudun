/* pages/detailstotal/detailstatal.wxss */
.nav-header{
  display: flex;
  margin-top:20rpx;
}
.nav-header .header-tab{
  flex-grow: 1;
  line-height: 74rpx;
  color:#2b2b2b;
  font-size: 28rpx;
  text-align: center;
  position: relative;
}
.nav-header .header-tab image{
  position: absolute;
  z-index: -1;
  width:177rpx;
  left: 50%;
  top:50%;
  transform: translateX(-50%) translateY(-50%);
  display: none;
}
.nav-header .header-tab.active image{
  display: block;
}
.nav-header .header-tab.active{
  color:#fff;
}

/*  */
.detail-grade{
  display: flex;
  background-color: #f8f3e5;
  margin-top:18rpx;
}
.detail-grade>text,.detail-grade>view{
  flex-grow: 1;
  font-size: 52rpx;
  line-height: 160rpx;
  text-align: center;
  color:#2b2b2b;
}
.detail-grade>view:last-child{
  font-size: 42rpx;
}
.detail-grade>view>text{
  font-size: 96rpx;
  color:#ff5846;
  display: inline-block;
  vertical-align: middle;
  margin-right: 14rpx;
}
.detail-line{
  margin-top:18rpx;
  background-color: #f8f3e5;
  padding:0 15rpx;
}
.detail-line-h6{
  padding-top:28rpx;
}
.detail-line-h6 text{
  line-height: 50rpx;
  font-size: 32rpx;
  color:#2b2b2b;
  display: block;
  padding:0 20rpx;
}
.detail-line-h6 image{
  width:100%;
  height:8rpx;
  display: block;
}
.detail-line-ctt{
  padding:20rpx;
}
.line-text{
  line-height: 50rpx;
  font-size: 28rpx;
  color:#2b2b2b;
  display: block;
  word-break:break-all; 
}
.line-text  .line-fr{float: right;}
.line-fr text{
  color:#ff5846;
}




